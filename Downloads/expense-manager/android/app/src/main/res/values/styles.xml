<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

  <!-- Base Application Theme (No Action Bar) -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowActionBar">false</item>
  </style>

  <!-- Theme used AFTER splash screen -->
  <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <item name="android:background">@null</item>
  </style>

  <!-- Android 12+ Splash Screen -->
<!--  <style name="Theme.App.Splash" parent="Theme.SplashScreen">-->
<!--    <item name="windowSplashScreenBackground">@color/splash_green</item>-->
<!--    <item name="windowSplashScreenAnimatedIcon">@drawable/wallet</item>-->
<!--    <item name="postSplashScreenTheme">@style/AppTheme.NoActionBar</item>-->
<!--  </style>-->
  <style name="Theme.MyApp" parent="Theme.SplashScreen">
    <item name="android:windowSplashScreenAnimatedIcon">@drawable/my_anim</item>
    <item name="android:windowSplashScreenAnimationDuration">3000</item> <!-- Duration in ms -->
    <item name="postSplashScreenTheme">@style/Theme.MyApp</item>
  </style>

  <style name="Theme.Splash" parent="@style/Theme.SplashScreen">
    <item name="windowActionBar">true</item>
    <item name="windowSplashScreenBackground">@drawable/splash_bg</item>
    <item name="windowSplashScreenAnimatedIcon">@drawable/my_anim</item>
    <item name="windowSplashScreenAnimationDuration">4000</item>
<!--    <item name="android:windowFullscreen">false</item>-->

    <item name="postSplashScreenTheme">@style/Theme.AppCompat.DayNight.NoActionBar</item>
  </style>
  <style name="Theme.SplashScreen" parent="Theme.MaterialComponents.DayNight">
    <item name="windowSplashScreenAnimatedIcon">@drawable/my_anim</item>
    <item name="windowSplashScreenAnimationDuration">4000</item>
    <item name="windowSplashScreenBackground">@drawable/splash_bg</item>

  </style>


  <!-- Splash Screen for Android < 12 (Older Versions) -->
  <style name="AppTheme.NoActionBarLaunch" parent="Theme.AppCompat.NoActionBar">
    <item name="android:background">@drawable/splash</item>
  </style>

</resources>
